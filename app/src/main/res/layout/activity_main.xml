                    android:layout_weight="85"
                    style="@style/Connection_successful"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="phobos.apple.com 80"
                    android:layout_weight="15"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/successful_connection"
                    android:layout_weight="85"
                    style="@style/Connection_successful"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*-courier.apple.com 5223"
                    android:layout_weight="15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/successful_connection"
                    android:layout_weight="85"
                    style="@style/Connection_successful"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*-courier.apple.com 443"
                    android:layout_weight="15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/failed_connection"
                    android:layout_weight="85"
                    style="@style/Connection_failed"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ocsp.apple.com 443"
                    android:layout_weight="15"/>
            </LinearLayout>

            <LinearLayout
